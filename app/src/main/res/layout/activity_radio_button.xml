<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RadioButtonActivity">


    <RadioGroup

        android:layout_margin="10dp"
        android:id="@+id/RadioGroup_id"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/radioButton_kish"
            android:background="@drawable/rb_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:tag="1"
            android:text="kish" />

        <RadioButton
            android:id="@+id/radioButton2_tehran"
            android:background="@drawable/rb_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:tag="2"
            android:text="tehran" />

        <RadioButton
            android:id="@+id/radioButton3_roudan"
            android:background="@drawable/rb_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:checked="true"
            android:tag="3"
            android:text="roudan" />

        <RadioButton
            android:id="@+id/radioButton4_bandar"
            android:background="@drawable/rb_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:tag="4"
            android:text="bandar" />

        <Button
            android:id="@+id/button_display_id"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="display" />
    </RadioGroup>

</LinearLayout>